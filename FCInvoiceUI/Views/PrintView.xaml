<Window x:Class="FCInvoiceUI.Views.PrintView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FCInvoiceUI.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:models="clr-namespace:FCInvoiceUI.Models"
        xmlns:viewmodels="clr-namespace:FCInvoiceUI.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:PrintViewModel}"
        mc:Ignorable="d"
        Title="Invoice Print Preview"
        Width="750"
        Height="1020"
        ResizeMode="NoResize"
        Background="#FFEFEFEF"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="18" />

            <Setter Property="VerticalAlignment"
                    Value="Center" />

            <Setter Property="TextAlignment"
                    Value="Center" />
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,20">

            <Viewbox Stretch="Uniform"
                     MaxWidth="800"
                     MaxHeight="900">

                <Border x:Name="PaperVisual"
                    Background="White"
                    BorderBrush="DarkGray"
                    BorderThickness="1"
                    Width="816"
                    Height="1056">

                    <Grid Margin="40">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="90" />
                            <RowDefinition Height="130" />
                            <RowDefinition Height="610" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                    Text="I N V O I C E"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    TextAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,0" />

                        <StackPanel Grid.Row="1"
                                    Margin="3,10,0,0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">

                            <TextBlock Text="Gene Fowler Const. Inc"
                                       TextAlignment="Left"/>

                            <TextBlock Text="304 E. Hinchman Rd"
                                       TextAlignment="Left"/>

                            <TextBlock Text="Berrien Springs Mi. 49103"
                                       TextAlignment="Left"/>
                        </StackPanel>

                        <Grid Grid.Row="2"
                              Margin="0,0,0,10">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,0,0,5">
                                    <TextBlock Text="Bill: "
                                               FontWeight="Bold"
                                               TextAlignment="Left" />

                                    <TextBlock Text="{Binding BillTo}"
                                               TextAlignment="Left"/>
                                </StackPanel>

                                <TextBlock Text="Terms: Due on receipt"
                                           FontWeight="Bold"
                                           TextAlignment="Left"
                                           VerticalAlignment="Bottom"
                                           Margin="0,55,0,0" />
                            </StackPanel>

                            <Grid Grid.Column="1"
                                  Margin="0,0,0,0"
                                  HorizontalAlignment="Right">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="Auto" />

                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Text="Date:"
                                           FontWeight="Bold"
                                           TextAlignment="Right"
                                           Margin="0,0,5,0" />

                                <TextBlock Grid.Row="0"
                                           Grid.Column="1"
                                           TextAlignment="Left"
                                           Text="{Binding SelectedDate, StringFormat='{}{0:dd MMM yy}'}" />

                                <TextBlock Grid.Row="2"
                                           Grid.Column="0"
                                           Text="Invoice:"
                                           TextAlignment="Right"
                                           FontWeight="Bold"
                                           Margin="0,0,5,0" />

                                <TextBlock Grid.Row="2"
                                           Grid.Column="1"
                                           TextAlignment="Left"
                                           Text="{Binding InvoiceNumber}" />

                                <TextBlock Grid.Row="4"
                                           Grid.Column="0"
                                           Text="Project:"
                                           FontWeight="Bold"
                                           Margin="0,0,5,0" />

                                <TextBlock Grid.Row="4"
                                           Grid.Column="1"
                                           TextAlignment="Left"
                                           Text="{Binding ProjectNumber}" />
                            </Grid>
                        </Grid>

                        <Border Grid.Row="3"
                                BorderBrush="Black"
                                BorderThickness="1"
                                Margin="0,20,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="563" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="90" />
                                        <ColumnDefinition Width="90" />
                                    </Grid.ColumnDefinitions>
                                    <Border BorderBrush="Black"
                                            BorderThickness="0,0,1,1"
                                            Grid.Column="0">

                                        <TextBlock Text="Quantity"
                                                   FontWeight="Bold"
                                                   Padding="5" />
                                    </Border>

                                    <Border BorderBrush="Black"
                                            BorderThickness="0,0,1,1"
                                            Grid.Column="1">

                                        <TextBlock Text="Description"
                                                   FontWeight="Bold"
                                                   Padding="5" />
                                    </Border>

                                    <Border BorderBrush="Black"
                                            BorderThickness="0,0,1,1"
                                            Grid.Column="2">

                                        <TextBlock Text="Rate"
                                                   FontWeight="Bold"
                                                   Padding="5" />
                                    </Border>

                                    <Border BorderBrush="Black"
                                            BorderThickness="0,0,0,1"
                                            Grid.Column="3">

                                        <TextBlock Text="Amount"
                                                   FontWeight="Bold"
                                                   Padding="5" />
                                    </Border>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid IsHitTestVisible="False">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="90" />
                                        </Grid.ColumnDefinitions>

                                        <Border BorderBrush="Black"
                                                BorderThickness="0,0,1,0"
                                                Grid.Column="0" />

                                        <Border BorderBrush="Black"
                                                BorderThickness="0,0,1,0"
                                                Grid.Column="1" />

                                        <Border BorderBrush="Black"
                                                BorderThickness="0,0,1,0"
                                                Grid.Column="2" />

                                        <Border BorderBrush="Black"
                                                BorderThickness="0,0,0,0"
                                                Grid.Column="3" />
                                    </Grid>

                                    <ItemsControl Grid.Row="1"
                                                  ItemsSource="{Binding InvoiceItems}"
                                                  VerticalAlignment="Top">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="90" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="90" />
                                                        <ColumnDefinition Width="90" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                               HorizontalAlignment="Center"
                                                               Text="{Binding Quantity}"
                                                               Padding="5"
                                                               FontSize="18" />

                                                    <TextBlock Grid.Column="1"
                                                               HorizontalAlignment="Center"
                                                               Text="{Binding Description}"
                                                               Padding="5"
                                                               FontSize="18"
                                                               TextWrapping="Wrap" />

                                                    <TextBlock Grid.Column="2"
                                                               HorizontalAlignment="Center"
                                                               Padding="5"
                                                               FontSize="18">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text"
                                                                        Value="{Binding Rate, StringFormat={}{0:N2}}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Rate}"
                                                                                 Value="0">
                                                                        <Setter Property="Text"
                                                                                Value="" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <TextBlock Grid.Column="3"
                                                               Padding="5"
                                                               HorizontalAlignment="Center"
                                                               FontSize="18">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text"
                                                                        Value="{Binding Amount, StringFormat={}{0:N2}}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Amount}"
                                                                                 Value="0">
                                                                        <Setter Property="Text"
                                                                                Value="" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Grid>
                        </Border>

                        <DockPanel Grid.Row="4"
                                   Margin="0,20,0,0"
                                   Height="80"
                                   VerticalAlignment="Bottom">
                            <TextBlock Text="Thank you for your business."
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,0" />

                            <StackPanel HorizontalAlignment="Right"
                                        Orientation="Vertical">
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right">
                                    <TextBlock Text="Total: "
                                               FontWeight="Bold"
                                               Margin="0,0,5,0" />
                                    <TextBlock Text="{Binding Total, StringFormat={}${0:N2}}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Margin="0,18,0,0">
                                    <TextBlock Text="Balance Due: "
                                               FontWeight="Bold"
                                               Margin="0,0,5,0" />
                                    <TextBlock Text="{Binding Total, StringFormat={}${0:N2}}" />
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                    </Grid>
                </Border>
            </Viewbox>
        </StackPanel>

        <Button Content="Print and Save"
                Width="160"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                FontWeight="Bold"
                Command="{Binding PrintAndSaveCommand}" />
    </Grid>
</Window>